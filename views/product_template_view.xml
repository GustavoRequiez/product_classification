<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="product_classification" model="ir.ui.view">
    <field name="name">product.classification.view</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <field name="uom_po_id" position="after">
        <field name="its_line"/>
        <field name="classification_ABC"/>
        <field name="classification_XYZ"/>
      </field>
    </field>
  </record>

  <record id="stock_move_line_classification_view" model="ir.ui.view">
    <field name="name">stock.move.line.classification.view</field>
    <field name="model">stock.move.line</field>
    <field name="inherit_id" ref="stock.view_move_line_form"/>
    <field name="arch" type="xml">
      <field name="location_dest_id" position="after">
        <field name="its_line_filter" attrs="{'invisible': [('uid', '!=', 1)]}"/>
        <field name="classification_ABC_filter" attrs="{'invisible': [('uid', '!=', 1)]}"/>
        <field name="classification_XYZ_filter" attrs="{'invisible': [('uid', '!=', 1)]}"/>
        <field name="categ_id" attrs="{'invisible': [('uid', '!=', 1)]}"/>
        <field name="seller_ids" attrs="{'invisible': [('uid', '!=', 1)]}">
          <tree>
            <field name="name"/>
          </tree>
        </field>
      </field>
    </field>
  </record>

